{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier", "no-unused-imports"],
  "ignorePatterns": [".next/"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "semi": true,
        "singleQuote": true
      }
    ],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-unused-imports/no-unused-imports": "error"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "commonjs": true
  },
  "env": {
    "node": true,
    "es6": true
  }
}
